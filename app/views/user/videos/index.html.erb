<h1 class="text-xl font-bold mb-4"><%= t '.available_videos' %></h1>

<ul class="space-y-4">
  <% if @videos.empty? %>
    <li class="border p-4 rounded bg-gray-100 text-center text-gray-500">
      <%= t('.no_videos_uploaded', default: 'No videos uploaded yet.') %>
    </li>
  <% end %>
  <% @videos.each do |video| %>
    <li class="border p-4 rounded bg-background shadow">
      <h2 class="font-semibold"><%= video.title %></h2>
      <p class="text-gray-600 text-sm"><%= t '.uploaded_by' %>: <%= video.user.email %></p>
      <%= link_to user_video_path(video), class: "flex items-center gap-1 p-2 text-primary hover:text-primary/90" do %>
        <%= lucide_icon("eye", class: "w-4 h-4") %>
        <%= t(".view_video") %>
      <% end %>
    </li>
  <% end %>
</ul>