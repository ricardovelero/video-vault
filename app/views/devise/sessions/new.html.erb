<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-center"><%= t '.login_title' %></h2>

    <%= form_with scope: :user, url: session_path(:user), local: true do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700 mb-1" %>
        <%= form.email_field :email, autofocus: true, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-6">
        <%= form.label :password, class: "block text-gray-700 mb-1" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="flex justify-between items-center mb-4">
        <%= link_to t('.forgot_password'), new_user_password_path, class: "text-sm text-blue-600 hover:underline" %>
      </div>

      <%= form.submit t('.login'), class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
    <% end %>

    <div class="text-center mt-4">
      <p class="text-sm text-gray-600"><%= t '.register_question' %>
        <%= link_to t('.register'), new_user_registration_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>